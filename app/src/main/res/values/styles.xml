<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="themedUpvoteDrawable">@drawable/ic_upvote_black</item>
        <item name="themedCommentDrawable">@drawable/ic_comment_black</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondaryInverse</item>
        <item name="contentColor">@android:color/black</item>
    </style>
    
    <style name="MainTheme" parent="AppTheme" >
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="themedUpvoteDrawable">@drawable/ic_upvote_white</item>
        <item name="themedCommentDrawable">@drawable/ic_comment_white</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryInverse</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimary</item>
        <item name="android:textColorSecondaryInverse">@color/textColorSecondary</item>
        <item name="contentColor">@android:color/white</item>
    </style>

    <style name="MainTheme.Dark" parent="AppTheme.Dark" >
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:titleTextStyle">@style/Toolbar.TitleText</item>
        <item name="android:subtitleTextStyle">@style/Toolbar.SubtitleText</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Toolbar.SubtitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">13sp</item>
    </style>
</resources>
